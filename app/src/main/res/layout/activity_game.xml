<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_riddleme_background"
    tools:context="com.sixtech.paulchidi.riddleme.game.GameActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pause"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_pause"
        android:background="@drawable/button_next_state"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/textViewRiddle"
        android:layout_below="@+id/btn_pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAnswer"
        android:hint="@string/text_ans"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/okay_button"
        android:id="@+id/btn_ok"
        android:layout_below="@+id/editTextAnswer"
        android:layout_centerHorizontal="true" />



     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/btn_next"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
         android:src="@drawable/next"
         android:background="@drawable/button_next_state"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/game_points"
        android:id="@+id/textView_points"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_next"
        android:layout_toStartOf="@+id/btn_next" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/game_score"
        android:id="@+id/textView_gamescore"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/textView_points"
        android:layout_toRightOf="@+id/textView_points"
        android:layout_toEndOf="@+id/textView_points" />
</RelativeLayout>
