<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_riddleme_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="234dp"
        android:text="@string/menu_new_game"
        android:alpha="0.5"
        android:background="@drawable/button_states"
        android:textSize="20sp"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_new_game"
        android:text="@string/menu_resume"
        android:alpha="0.5"
        android:background="@drawable/button_states"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/menu_spacing"
        />

    <Button

        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_resume"
        android:text="@string/menu_settings"
        android:alpha="0.5"
        android:background="@drawable/button_states"
        android:layout_marginTop="@dimen/menu_spacing"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_settings"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_help"
        android:alpha="0.5"
        android:background="@drawable/button_states"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/menu_spacing"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_help"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_exit"
        android:alpha="0.5"
        android:background="@drawable/button_states"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/menu_spacing"/>
</RelativeLayout>
